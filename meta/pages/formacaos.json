{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "heading",
          "name": "pageTitle",
          "size": "H1",
          "text": "Formacaos"
        },
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "name": "grid0",
                  "allowDelete": false,
                  "confirmDelete": false,
                  "allowAdd": false,
                  "allowFiltering": true,
                  "allowMultiSorting": false,
                  "allowPaging": true,
                  "allowSorting": true,
                  "count": "${getFormacaosCount}",
                  "data": "${getFormacaosResult}",
                  "events": {
                    "loadData": [
                      {
                        "name": "ProjetoNew.getFormacaos",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "event.top"
                          },
                          {
                            "name": "$skip",
                            "value": "event.skip"
                          },
                          {
                            "name": "$count",
                            "value": "event.top != null && event.skip != null"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          }
                        ],
                        "then": [
                          {
                            "name": "getFormacaosResult",
                            "type": "set",
                            "value": "${result.value}"
                          },
                          {
                            "name": "getFormacaosCount",
                            "type": "set",
                            "value": "event.top != null && event.skip != null ? result['@odata.count'] : ${result.value.length}"
                          }
                        ],
                        "type": "invoke",
                        "error": [
                          {
                            "detail": "Unable to load Formacaos",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ]
                      }
                    ]
                  },
                  "title": "",
                  "columns": [
                    {
                      "property": "tipo_formacao",
                      "title": "Tipo Formacao",
                      "type": "string"
                    },
                    {
                      "property": "descricao_Formacao",
                      "title": "Descricao Formacao",
                      "type": "string"
                    },
                    {
                      "property": "index_Recurso",
                      "title": "Index Recurso",
                      "type": "integer"
                    },
                    {
                      "property": "tipo_Ensino",
                      "title": "Tipo Ensino",
                      "type": "string"
                    }
                  ],
                  "type": "grid"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "type": "execute",
        "code": "this.grid0.load();"
      }
    ]
  },
  "name": "Formacaos",
  "layout": "Main"
}