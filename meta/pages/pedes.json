{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "heading",
          "name": "pageTitle",
          "size": "H1",
          "text": "Pedes"
        },
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "name": "grid0",
                  "allowDelete": true,
                  "confirmDelete": true,
                  "allowAdd": true,
                  "allowFiltering": true,
                  "allowMultiSorting": false,
                  "allowPaging": true,
                  "allowSorting": true,
                  "count": "${getPedesCount}",
                  "data": "${getPedesResult}",
                  "events": {
                    "loadData": [
                      {
                        "name": "ProjetoNew.getPedes",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "event.top"
                          },
                          {
                            "name": "$skip",
                            "value": "event.skip"
                          },
                          {
                            "name": "$count",
                            "value": "event.top != null && event.skip != null"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          },
                          {
                            "name": "$expand",
                            "value": "Pessoa,Servico"
                          }
                        ],
                        "then": [
                          {
                            "name": "getPedesResult",
                            "type": "set",
                            "value": "${result.value}"
                          },
                          {
                            "name": "getPedesCount",
                            "type": "set",
                            "value": "event.top != null && event.skip != null ? result['@odata.count'] : ${result.value.length}"
                          }
                        ],
                        "type": "invoke",
                        "error": [
                          {
                            "detail": "Unable to load Pedes",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ]
                      }
                    ],
                    "delete": [
                      {
                        "error": [
                          {
                            "detail": "Unable to delete Pede",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "ProjetoNew.deletePede",
                        "parameters": [
                          {
                            "name": "id_Pessoa",
                            "value": "${event.id_Pessoa}"
                          },
                          {
                            "name": "index_servicos",
                            "value": "${event.index_servicos}"
                          }
                        ],
                        "then": [
                          {
                            "detail": "Pede deleted!",
                            "severity": "success",
                            "summary": "Success",
                            "type": "notify"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "add": [
                      {
                        "path": "add-pede",
                        "type": "popup"
                      }
                    ],
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "id_Pessoa",
                            "value": "${event.id_Pessoa}"
                          },
                          {
                            "name": "index_servicos",
                            "value": "${event.index_servicos}"
                          }
                        ],
                        "path": "edit-pede",
                        "type": "popup"
                      }
                    ]
                  },
                  "title": "",
                  "columns": [
                    {
                      "property": "id_Pessoa",
                      "sortProperty": "Pessoa.email_pessoa",
                      "filterProperty": "Pessoa.email_pessoa",
                      "template": "${data.Pessoa?.email_pessoa}",
                      "title": "Pessoa",
                      "type": "string"
                    },
                    {
                      "property": "index_servicos",
                      "sortProperty": "Servico.designa_pt_servicos",
                      "filterProperty": "Servico.designa_pt_servicos",
                      "template": "${data.Servico?.designa_pt_servicos}",
                      "title": "Servico",
                      "type": "string"
                    }
                  ],
                  "type": "grid"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "type": "execute",
        "code": "this.grid0.load();"
      }
    ]
  },
  "name": "Pedes",
  "layout": "Main"
}